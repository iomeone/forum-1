@model ViewModels.Topics.EditEventForm

<div id="create-event-form" class="content-box pad">
	<form method="post"
		  asp-action="@Model.FormAction"
		  asp-controller="@Model.FormController"
		  asp-route-returnurl="@ViewData["Referrer"]">

		<input asp-for="TopicId" />
		<input asp-for="Body" />
		<input asp-for="SelectedBoards" />

		<dl class="flex">
			<dt>All Day:</dt>
			<dd>
				<span><input asp-for="AllDay" /></span>
			</dd>
		</dl>
		<dl class="flex">
			<dt>Start time:</dt>
			<dd>
				<div id="startPicker" class="flatpickr">
					<input asp-for="Start" placeholder="1999-12-31 21:00" data-input />
					<img src="~/images/calendar.png" title="Toggle Picker" alt="Toggle Picker" class="pointer" data-toggle />
				</div>
			</dd>
			<dd><span asp-validation-for="Start" class="error"></span></dd>
		</dl>
		<dl class="flex">
			<dt>End time:</dt>
			<dd>
				<div id="startPicker" class="flatpickr">
					<input asp-for="End" placeholder="2000-01-01 04:00" data-input />
					<img src="~/images/calendar.png" title="Toggle Picker" alt="Toggle Picker" class="pointer" data-toggle />
				</div>
			</dd>
			<dd><span asp-validation-for="End" class="error"></span></dd>
		</dl>

		<dl class="flex">
			<dt></dt>
			<dd><button>Continue</button></dd>
		</dl>
	</form>
</div>

@{ViewData["Title"] = "Edit Event Details";}
@section Header {@ViewData["Title"]}

@section scripts {
	<script>
		window.pageActions = 'event-edit';
	</script>
}
