@model Forum.Views.Shared.Components.Quote.QuoteViewComponent.DisplayItem

<style>
	[data-component="sidebar-quote"] {
		max-height: 178px;
		overflow: hidden;
	}
</style>

@if (Model is Forum.Views.Shared.Components.Quote.QuoteViewComponent.DisplayItem) {
	<div data-component="sidebar-quote">
		<h4>Quote of the Moment:</h4>
		<div class="gap-bottom">
			<div class="content-box small-pad font-small subdued-text" clickable-link-parent>
				<p id="qotm">
					@Html.Raw(Model.DisplayBody)
					<a asp-controller="@nameof(Topics)" asp-action="@nameof(Topics.Display)" asp-route-id="@Model.TopicId" asp-route-page="1" asp-route-target="@Model.MessageId" asp-fragment="message@(Model.MessageId)"></a>
				</p>
			</div>
			<p class="font-small subdued-text align-right">@Html.Raw(Model.PostedBy)</p>
		</div>
	</div>
}
