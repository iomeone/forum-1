@model ViewModels.Events.CreateForm

<div asp-validation-summary="All" class="error"></div>

<div id="create-event-form" class="content-box pad">
	<form method="post"
		  asp-action="@Model.FormAction"
		  asp-controller="@Model.FormController"
		  asp-route-returnurl="@ViewData["Referrer"]">

		<dl class="flex">
			<dt>Start time:</dt>
			<dd>
				<input asp-for="Start" placeholder="1999-12-31 21:00" />
			</dd>
		</dl>
		<dl class="flex">
			<dt>End time:</dt>
			<dd>
				<input asp-for="End" placeholder="2000-01-01 04:00" />
			</dd>
		</dl>
		<dl class="flex">
			<dt></dt>
			<dd><button>Continue</button></dd>
		</dl>
	</form>
</div>

@{ViewData["Title"] = "Create an Event";}
@section Header {@ViewData["Title"]}

@section scripts {
	<script>
		window.pageActions = 'event-create';
	</script>
}

@section styles {
	<link rel="stylesheet" href="~/styles/event-create.css" asp-append-version="true" />
}