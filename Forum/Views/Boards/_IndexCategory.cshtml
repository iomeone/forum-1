@model ViewModels.Boards.IndexCategory

<div class="content-box pad small-gap overflow-hidden mobile-hide">
	<div>
		<div class="board-last-post float-right">Last Post</div>
		<div class="board-name"><h3>@Model.Name</h3></div>
	</div>
	@foreach (var board in Model.Boards) {
		<partial name="_IndexBoard" for="@board" />
	}
</div>

<div class="content-box pad small-gap overflow-hidden mobile-only">
	@foreach (var board in Model.Boards) {
		<partial name="_IndexBoard" for="@board" />
	}
</div>