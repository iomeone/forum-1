@model ViewModels.Boards.IndexCategory

<div class="category pad small-gap content-box">
	<h3>
		@Model.Name
		@if (Model.DisplayOrder != 1) {
			<a asp-controller="@nameof(Boards)" asp-action="@nameof(Boards.MoveCategoryUp)" asp-route-id="@Model.Id" class="borderless spaced"><img alt="Move up" src="~/images/upArrow.png" /></a>
		}
		<img src="~/images/join.png" category-id="@Model.Id" class="merge-category spaced" />
	</h3>

	<div class="table full-width">
		@foreach (var child in Model.Boards) {
			<div class="table-row board">
				<div class="table-cell board-name small-pad">
					<span>@child.Name</span>
				</div>
				<div class="table-cell board-info small-pad">
					@if (child.DisplayOrder != 1) {
						<a asp-controller="@nameof(Boards)" asp-action="@nameof(Boards.MoveBoardUp)" asp-route-id="@child.Id" class="borderless"><img alt="Move up" src="~/images/upArrow.png" /></a>
					}
				</div>
				<div class="table-cell board-info small-pad">
					<a asp-controller="@nameof(Boards)" asp-action="@nameof(Boards.Edit)" asp-route-id="@child.Id" class="borderless"><img alt="Edit" src="~/images/edit.png" /></a>
				</div>
				<div class="table-cell board-info small-pad">
					<img src="~/images/join.png" board-id="@child.Id" class="merge-board" />
				</div>
			</div>
		}
	</div>
</div>